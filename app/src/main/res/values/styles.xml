<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




    <!-- CARD VIEW STYLE -->

    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CardTitleStyle">
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">top|center</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1.5</item>
    </style>

    <style name="CardLinkStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1.2</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">top|center</item>
        <item name="android:textColor">@color/link</item>
    </style>

    <style name="CardDateStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/date</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginLeft">@dimen/paddingOrMar_S</item>

    </style>

    <style name="CardSectionStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginRight">@dimen/paddingOrMar_S</item>
        <item name="android:textColor">@color/section</item>


    </style>

    <style name="CardAuthorStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">1.2</item>

    <item name="android:textAlignment">center</item>
    <item name="android:textColor">@color/author</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListViewElemActivityMainStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_below">@id/search_bar</item>
        <item name="android:layout_marginLeft">@dimen/paddingOrMar_XS</item>
        <item name="android:layout_marginRight">@dimen/paddingOrMar_XS</item>
        <item name="android:layout_marginTop">@dimen/paddingOrMar_XL</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>



</resources>
